@page "/Wallets/{walletId}/Transactions/Edit/{transactionId}"
@model LNblitz.Pages.Wallets.Transactions.EditModel

@{
    ViewData["Title"] = "Edit your transaction";
}

<header class="mb-3">
    <h1>@ViewData["Title"]</h1>
</header>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Transaction.Description" class="control-label"></label>
                <input asp-for="Transaction.Description" class="form-control" />
                <span asp-validation-for="Transaction.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<p>
    <a asp-page="/Index" asp-route-walletId="@Model.WalletId" class="text-secondary">Back to Wallet</a>
</p>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
