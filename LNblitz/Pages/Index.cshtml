@page
@model LNblitz.Pages.Index

@{
    Layout = "_LayoutSimple";
    ViewData["Title"] = "Your Lightning Bank";
}
<p class="text-center">
    @if (User.Claims.Any(c => c.Type == "UserId"))
    {
        <a asp-page="/Wallets/Index" class="btn btn-primary">
            Access your wallets
        </a>
    }
    else
    {
        <a asp-controller="Account" asp-action="Login" class="btn btn-primary">
            Sign in to your account
        </a>
    }
</p>
