@page "/Wallets/{walletId}/Transactions/Details/{transactionId}"
@model LNblitz.Pages.Wallets.Transactions.DetailsModel

@{
    ViewData["Title"] = Model.Transaction.Description;
}

<h1>@ViewData["Title"]</h1>

<div>
    <dl class="row">
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.Amount)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-walletId="@Model.WalletId" asp-route-transactionId="@Model.Transaction.TransactionId">Edit</a> |
    <a asp-page="./Delete" asp-route-walletId="@Model.WalletId" asp-route-transactionId="@Model.Transaction.TransactionId">Delete</a> |
    <a asp-page="./Index" asp-route-walletId="@Model.WalletId">Back to List</a>
</div>
