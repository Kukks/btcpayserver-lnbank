@page "/Wallets/{walletId}/Transactions/Details/{transactionId}"
@model LNblitz.Pages.Wallets.Transactions.DetailsModel

@{
    ViewData["Title"] = Model.Transaction.Description;
}

<h1>@ViewData["Title"]</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.PaymentRequest)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.PaymentRequest)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.ExpiresAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.ExpiresAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.Status)
        </dd>
        @if (Model.Transaction.PaidAt != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Transaction.PaidAt)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Transaction.PaidAt)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-walletId="@Model.WalletId" asp-route-transactionId="@Model.Transaction.TransactionId">Edit</a> |
    <a asp-page="./Delete" asp-route-walletId="@Model.WalletId" asp-route-transactionId="@Model.Transaction.TransactionId">Delete</a> |
    <a asp-page="./Index" asp-route-walletId="@Model.WalletId">Back to List</a>
</div>
