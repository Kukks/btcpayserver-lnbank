@page "{walletId}"
@model LNblitz.Pages.Wallets.DeleteModel

@{
    ViewData["Title"] = $"Delete \"{Model.Wallet.Name}\"";
}

<header class="mb-3">
    <h1>@ViewData["Title"]</h1>
</header>

<h3>Are you sure you want to delete this wallet?</h3>
    
<form method="post">
    <input type="submit" value="Delete" class="btn btn-danger" />
</form>

<a asp-page="./Index" class="text-secondary">Back to List</a>
