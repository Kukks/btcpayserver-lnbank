@page "{walletId}"
@model LNblitz.Pages.Wallets.EditModel

@{
    ViewData["Title"] = "Edit your wallet";
}

<header class="mb-3">
    <h1>@ViewData["Title"]</h1>
</header>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Wallet.Name" class="control-label"></label>
                <input asp-for="Wallet.Name" class="form-control" />
                <span asp-validation-for="Wallet.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<p>
    <a asp-page="./Index" class="text-secondary">Back to List</a>
</p>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
